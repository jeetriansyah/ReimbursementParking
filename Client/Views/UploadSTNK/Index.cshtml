
@{
    ViewData["Title"] = "Index";
}

<script src="~/datatables/jquery-2.2.3.min.js"></script>
<form method="post" asp-controller="UploadSTNK" asp-action="ImageUpload" enctype="multipart/form-data">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Photo:</label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input class="form-control custom-file-input" type="file" name="file" />
                <label class="custom-file-label">Browse...</label>
            </div>
        </div>
        <button type="submit">Upload</button>
    </div>
    <img src="@ViewData["FileLocation"]" width="600" height="400" />
</form>
<script type="text/javascript">
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next(".custom-file-label").html(fileName);
            })
        });
</script>

