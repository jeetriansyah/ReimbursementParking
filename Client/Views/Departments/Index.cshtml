    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/datatables/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Login/assets/extra-libs/sparkline/sparkline.js"></script>
    <!--Wave Effects -->
    <script src="~/Login/dist/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/Login/dist/js/sidebarmenu.js"></script>
    <!--Custom JavaScript -->
    <script src="~/Login/dist/js/custom.min.js"></script>
    <script src="~/datatables/jquery.dataTables.min.js"></script>
    <script src="~/datatables/dataTables.responsive.min.js"></script>
    <script src="~/datatables/datatable-basic.init.js"></script>
    <script src="~/datatables/datatable-basic.init.js"></script>
    <script src="~/datatables/bootstrap.js"></script>
    <script src="~/js/Department/DepartmentScript.js"></script>
}