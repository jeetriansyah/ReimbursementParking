    <script type="text/javascript">
        $(document).ready(function () {
            $('#transactionGrid').dataTable({
                "columnDefs": [
                    { "orderable": false, "targets": 5 }
                ],
                "ajax": loadData(),
                "responsive": true
            });
        });
        function loadData() {
            $.ajax({
                url: "/Requests/RequestList",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                async: false,
                success: function (result) {
                    debugger;
                    var html = '';
                    $.each(result, function (key, transaction) {
                        html += '<tr>';
                        html += '<td>' + transaction.transactionDate + '</td>';
                        html += '<td>' + transaction.costs + '</td>';
                        html += '<td>' + transaction.approvedBy + '</td>';
                        html += '<td>' + transaction.approvedDate + '</td>';
                        html += '<td>' + transaction.status + '</td>';
                        html += '<td><button type="button" class="btn btn-warning" id="Update" onclick="return GetbyId(' + transaction.id + ')">Edit</button> ';
                        html += '<button type="button" class="btn btn-danger" id="Delete" onclick="return Delete(' + transaction.id + ')" >Delete</button ></td > ';
                        html += '</tr>';
                    });
                    $('.transactionsBody').html(html);
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }

    </script>
